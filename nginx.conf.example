server {
    listen 80;
    server_name www.sagafit.es sagafit.es;

    # Main website (existing sagafit.es site)
    location / {
        root /var/www/html;
        index index.html;
        try_files $uri $uri/ =404;
    }

    # KsarApp frontend (static HTML/CSS/JS)
    location /ksarapp {
        alias /var/www/html/ksarapp;
        index index.html;
        try_files $uri $uri/ /ksarapp/index.html;
    }

    # KsarApp backend API (proxy to Node.js)
    location /api {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    # Redirect HTTP to HTTPS (uncomment after SSL certificate is installed)
    # return 301 https://$server_name$request_uri;
}

